# https://editorconfig.org/

root = true

[*]
charset = utf-8 ; no BOM
indent_size = 4
indent_style = tab
insert_final_newline = true
# end_of_line = crlf

[.*]
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.pug]
indent_size = 4
indent_style = tab

[*.html]
indent_size = 2
indent_style = space

[*.{css,scss}]
indent_size = 2
indent_style = space

[*.js]
indent_size = 2

[*.json]
indent_size = 2
indent_style = space
