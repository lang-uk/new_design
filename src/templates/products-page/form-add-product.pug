
.add-product
    h1.h1.add-product-title Додати продукт

    form.add-product-form
        .form-row
            .form-row__title.text-m Мова заповнення форми
            .form-row__content
                .radio-items
                    label.radio-item
                        input(type='radio' name='lang' value='Укр' checked)
                        span.radio-item__text Укр
                        span.radio-item__square
                    
                    label.radio-item
                        input(type='radio' name='lang' value='Укр/En')
                        span.radio-item__text Укр/En
                        span.radio-item__square

        .form-row
            .form-row__title.text-m Назва продукту*
            .form-row__content
                input.input.required(type='text' name='name-product' placeholder="Введіть назву продукту")
                .error-message Enter product name

        .form-row
            .form-row__title.text-m Категорія*
            .form-row__content
                select.required(name='select' class="select-css")
                    option(disabled selected value="0") Виберіть категорію
                    option(value='Бібліотеки') Бібліотеки
                    option(value='Ґазетіри') Ґазетіри
                    option(value='Сервіси') Сервіси
                    option(value='Моделі') Моделі
                    option(value='Словники') Словники
                    option(value='Корпуси') Корпуси

        .form-row
            .form-row__title.text-m Текстовий опис*
            .form-row__content
                textarea.required.editor(name="description")

        .form-row
            .form-row__title.text-m Автор(-и) *
            .form-row__content
                .copy-block
                    .copy-block-content
                        .copy-block-content__count
                        input.required.input(type="text" name="authors[]" placeholder="Ім’я автора")
                        .chip
                            //- .chip-list
                            input.chip-input(type="text" name="authors_links[]" placeholder="Посилання на соц. мережі (опціонально)")
                        .copy-block-content__button
                            .copy-block-content__icon.copy-block-content__add
                                include ../../svg/form-plus.svg

        .form-row
            .form-row__title.text-m Ліцензія*
            .form-row__content
                select.required(name='select' class="select-css")
                    option(disabled selected  value="0") Виберіть ліцензію
                    option(value='Ліцензія 1') Ліцензія 1
                    option(value='Ліцензія 2') Ліцензія 2
        
        .form-row
            .form-row__title.text-m Приклад цитування
            .form-row__content
                textarea.textarea.textarea--quote(name="quote" placeholder="Приклад цитування (опціонально)")     

        .form-row
            .form-row__title.text-m Чи потрібен хостинг*
            .form-row__content
                .radio-items
                    label.radio-item
                        input(type='radio' name='hosting' value='Так' checked)
                        span.radio-item__text Так
                        span.radio-item__square
                    
                    label.radio-item
                        input(type='radio' name='hosting' value='Ні')
                        span.radio-item__text Ні
                        span.radio-item__square

        .form-row
            .form-row__title.text-m Посилання на деліверабли 
            .form-row__content
                .copy-block
                    .copy-block-content
                        .copy-block-content__count
                        input.input(type="text" name="links[]" placeholder="Опціонально")
                        .copy-block-content__button
                            .copy-block-content__icon.copy-block-content__add
                                include ../../svg/form-plus.svg


                
                textarea.textarea(name="dev-description1" placeholder="Опис")
                textarea.textarea(name="dev-description2" placeholder="Add a description")
        
        .form-row
            .form-row__title.text-m Email для зворотнього зв’язку *
            .form-row__content
                input.input.required(type="email" name="email" placeholder="Your email")
                .note Ми не будемо оприлюднювати ваш імейл на сайті

        .form-row
            .form-row__button
                button.button.button-wave(type='submit') Відправити


